export ZSH="$HOME/.oh-my-zsh"

fpath+=$HOME/.zsh/pure
autoload -U promptinit; promptinit
prompt pure

plugins=(
    git
    fast-syntax-highlighting
    zsh-autosuggestions
    zsh-completions
    ls
    dircolors-neutral
    sudo
)

export EDITOR=vim
export PAGER=less
path+=~/.bin/

source $ZSH/oh-my-zsh.sh

function path() {
  echo -e "${PATH//:/\\n}"
}

alias ..="cd ../"
alias ...="cd ../../"
alias :q="exit"
alias zshconfig="vim ~/.zshrc"
alias /="fzf --preview 'bat --color=always {}'"
alias pacu="sudo pacman -Syu"
alias paci="sudo pacman -S"
alias pacr="sudo pacman -Rnsu"
alias auru="yay -Syu"
alias auri="yay -S"
alias aurr="yay -Rnsu"
alias ports="sudo netstat -tulanp"
alias serve="miniserve"
alias venvn="python -m venv $HOME/.globalenv"
alias venva="source $HOME/.globalenv/bin/activate"
alias venvr="rm -r $HOME/.globalenv/bin/activate"
alias dotsync="chezmoi re-add && chezmoi git add . && chezmoi git cm 'update' && chezmoi git push"


eval "$(fzf --zsh)"

if command -v nvim &> /dev/null; then
    alias v="nvim"
    alias vim="nvim"
fi

if command -v bat &> /dev/null; then
    alias cat="bat"
fi

if command -v delta &> /dev/null; then
    alias diff="delta"
fi

if command -v eza &> /dev/null; then
    alias ls="eza -lh --group-directories-first --icons"
    alias lt='eza --tree --level=2 --long --icons --git'
fi

if command -v zoxide &> /dev/null; then
    eval "$(zoxide init --cmd cd zsh)"
fi

if command -v pyenv &> /dev/null; then
    export PYENV_ROOT="$HOME/.pyenv"
    [[ -d $PYENV_ROOT/bin ]] && export PATH="$PYENV_ROOT/bin:$PATH"
    eval "$(pyenv init -)"
fi

