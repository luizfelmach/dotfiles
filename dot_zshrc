export ZSH="$HOME/.oh-my-zsh"

fpath+=$HOME/.zsh/pure
autoload -U promptinit; promptinit
prompt pure

plugins=(
    git
    fast-syntax-highlighting
    zsh-autosuggestions
    zsh-completions
    ls
    dircolors-neutral
    sudo
)

export EDITOR=vim
export PAGER=less
path+=~/.bin/

source $ZSH/oh-my-zsh.sh

alias zshconfig="vim ~/.zshrc"
alias v="nvim"
alias vim="nvim"
alias ..="cd ../"
alias ...="cd ../../"
alias /="fzf"

bindkey -v
